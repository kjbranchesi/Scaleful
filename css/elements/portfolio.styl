/*----------------------*/ 
/*   FILTER             */ 
/*----------------------*/

.toggle-filter
	font-size 25px
	line-height 1em
	display inline-block
	cursor pointer
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	color $lgray
	transition all .3s ease-in-out

.filters-wrap
	opacity 0
	visibility hidden
	margin 30px 0 60px
	transition all .3s .12s ease-in-out
	a
		display inline-block
		margin 0 15px
		font-weight 600
		font-size 16px
		text-transform capitalize

.filters-wrap a > span
	position relative
	&::after
		content ''
		position absolute
		bottom -2px
		left 0
		width 0
		height 1px
		opacity 0
		background-color $black
		transition width .3s ease-in-out, opacity .2s ease-in-out
		
.filters-wrap a.active > span::after,
.filters-wrap a:hover > span::after
	width 100%
	opacity 1

.filters-wrap a:not(.active):hover
	color $lgray

.filter-open
	.filters-wrap
		opacity 1
		visibility visible
	.toggle-filter
		color $black

@media (max-width: 33.9em)
	.filters-wrap a
		display block
		margin 0 15px 10px


/*----------------------*/ 
/*   PORTFOLIO          */ 
/*----------------------*/

.portfolio-masonry-wrapper
	position relative
	overflow hidden

.portfolio-item
	position relative
	overflow hidden !important
	a
		overflow hidden
		position relative
		display block
		background-color $dwhite

.portfolio-content-wrap, 
.portfolio-title,
.portfolio-categories
	white-space nowrap
	webkit-font-smoothing antialiased
	-khtml-font-smoothing antialiased
	-apple-font-smoothing antialiased
	

.portfolio-content-wrap
	position absolute
	overflow hidden
	top 0
	left 0
	height 100%
	width 100%
	opacity 0
	transition all .4s ease
	padding 40px 0 0 40px
	background-color rgba($white, 90%)
	
.potfolio-content
	width 100%
	text-align left
	display inline-block


.portfolio-categories,
.portfolio-title
	opacity 0

.portfolio-categories
	color $lgray
	font-size 14px
	font-family $f2
	font-style italic
	transform translateY(-7px)
	transition all .25s .2s ease

.portfolio-title
	margin 0 0 2px
	font-size 22px
	letter-spacing 0
	color $black
	transform translateY(-7px)
	transition all .25s ease
	font-weight 600

@media (max-width: 47.9em)
	.portfolio-title
		font-size 20px
		
.portfolio-item a:hover
	.portfolio-categories,
	.portfolio-title
		opacity 1
		transform translateY(0)
	.portfolio-content-wrap
		opacity 1


/*----------------------*/ 
/*   FULLWIDTH PORTFOLIO*/ 
/*----------------------*/

$percent = 80%

.portfolio-fullwidth
	.portfolio-img
		padding-top $percent
		background-size cover
		background-position center center	
		&.large
			padding-top $percent * 2

/*----------------------*/ 
/*   PORTFOLIO GRID     */ 
/*----------------------*/

.portfolio-masonry-wrapper .portfolio-item
	float left

.portfolio-masonry-wrapper[data-col="two"] .portfolio-item
	width 50%
	
.portfolio-masonry-wrapper[data-col="three"] .portfolio-item
	width 33.333%
	
.portfolio-masonry-wrapper[data-col="four"] .portfolio-item
	width 25%

@media (max-width: 74.9em)
	.portfolio-masonry-wrapper[data-col="three"] .portfolio-item,
	.portfolio-masonry-wrapper[data-col="four"] .portfolio-item
		width 50%

@media (max-width: 47.9em)
	.portfolio-masonry-wrapper[data-col="two"] .portfolio-item,
	.portfolio-masonry-wrapper[data-col="three"] .portfolio-item,
	.portfolio-masonry-wrapper[data-col="four"] .portfolio-item
		width 100%
		

