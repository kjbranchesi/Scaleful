/*----------------------*/ 
/*   SECTION            */ 
/*----------------------*/

#pagepiling
	position relative
	
.pp-section
	height 100% !important
	background-size cover
	overflow hidden
	background-position center center
	background-repeat no-repeat
	

/*----------------------*/ 
/*   DOTTED             */ 
/*----------------------*/

#pp-nav.right
	right 30px

#pp-nav
	ul
		margin 0
		padding 0
	
#pp-nav li, .pp-slidesNav li
	display block
	width 30px
	text-align center
	height 13px
	margin 14px 7px
	position relative

#pp-nav li a, .pp-slidesNav li a
	display inline-block
	position relative
	z-index 1
	width 100%
	height 100%
	cursor pointer
	text-decoration none

#pp-nav li a span, .pp-slidesNav li a span
	border-radius 50%
	display block
	z-index 1
	height 5px
	width 5px
	border 0
	background-color rgba($black, 10%)
	transition all .3s ease-in-out
	
#pp-nav li a.active span, .pp-slidesNav li a.active span
	background-color $black
	

/*----------------------*/ 
/*   CONTENT            */ 
/*----------------------*/

.piling-title
	font-family $f1
	font-weight 700
	font-size 70px
	line-height 1em
	margin 0
	
.piling-description
	font-size 18px
	font-family $f1
	margin 20px 0 0

.piling-content
	opacity 0
	cursor default
	transform scale(.85)
	transition all .4s ease .4s
	
.section.animated
	.piling-content
		opacity 1
		transform scale(1)